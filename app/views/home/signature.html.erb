<div class="container" style="margin-top: 2%;margin-bottom: 2%;">
    <%= form_tag("/post_form_signature", method: "post") do %>
        <div class="form-group">
            <%= label_tag(:cellphone_model, "Modelo:") %>
            <%= text_field_tag :cellphone_model, nil, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= label_tag(:imei, "IMEI:") %>
            <%= text_field_tag :imei, nil, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= label_tag(:price, "PreÃ§o:") %>
            <%= text_field_tag :price, nil, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= label_tag(:number_portion, "Parcelas:") %>
            <%= text_field_tag :number_portion, nil, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= label_tag(:cpf, "CPF Cliente:") %>
            <%= text_field_tag :cpf, nil, class: "form-control", placeholder: "CPF do Cliente registrado na API" %>
            <small><a href="https://pitzi-api.herokuapp.com/clients" target="_blank">https://pitzi-api.herokuapp.com/clients</a></small>
        </div>
        <%= submit_tag "Cadastrar", class: "btn btn-success" %>
    <% end %>
</div>